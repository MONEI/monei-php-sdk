{
  "git": {
    "tagName": "${version}",
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "yarn run build && yarn run scope && yarn run cs-fix && git add -A"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": [
        "lib/MoneiClient.php"
      ]
    },
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md"
    }
  }
} 